<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/home_volunteer_item_width"
    android:layout_height="@dimen/home_volunteer_item_height"
    android:layout_marginEnd="@dimen/margin_16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="@null"
    app:cardMaxElevation="@null">

    <TextView
        android:id="@+id/textView56"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:gravity="end"
        android:text="@string/details_btn"
        android:textColor="@color/mapo_gray"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_24dp"
        android:paddingEnd="@dimen/margin_16dp">

        <TextView
            android:id="@+id/textView51"
            style="@style/TagBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mapo_yellow"
            android:backgroundTintMode="src_in"
            android:fontFamily="@font/roboto_700"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="노력봉사"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="노숙자 및 쪽방촌 거주자를 위한 도시락 나눔 활동"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="일시 : 2021-08-25 (13:00 ~ 16:00)"
            android:textColor="@color/mapo_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장소 : 서울특별시 광진구 아차산로330(자양동) 3층"
            android:textColor="@color/mapo_gray"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>