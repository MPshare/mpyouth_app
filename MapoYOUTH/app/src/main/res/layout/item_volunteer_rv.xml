<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8dp"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="@null"
    app:cardMaxElevation="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_16dp">

        <TextView
            android:id="@+id/textView7"
            style="@style/TagBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#007440"
            android:text="환경보존"
            android:textColor="#007440" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:maxLines="2"
            android:text="'평화통일과 함께하기' 지역사회 캠페인 사전 준비 및 운영 [2회차]"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:text="일시 : 2021-08-21(13:00 ~ 16:00)"
            android:textColor="@color/mapo_gray" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장소 : 마포청소년문화의집 5층 미리내 및 1층 로비"
            android:textColor="@color/mapo_gray" />

        <TextView
            android:id="@+id/textView12"
            style="@style/TagBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_16dp"
            android:backgroundTint="@color/mapo_blue"
            android:text="모집 인원: 3명"
            android:textColor="@color/mapo_blue" />
    </LinearLayout>
</androidx.cardview.widget.CardView>