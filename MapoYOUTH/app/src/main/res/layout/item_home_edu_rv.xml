<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/home_edu_item_width"
    android:layout_height="@dimen/home_edu_item_height"
    android:layout_marginEnd="@dimen/margin_16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="@null"
    app:cardMaxElevation="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_24dp"
        android:paddingEnd="@dimen/margin_16dp">

        <TextView
            android:id="@+id/textView51"
            style="@style/TagBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mapo_bluegreen"
            android:backgroundTintMode="src_in"
            android:fontFamily="@font/roboto_700"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="지도(교육)봉사"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=" 초등생 영어관련봉사\n(영어 책 읽어주기, 프리토킹 등)"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="일시 : 2021-08-25 (13:00 ~ 16:00)"
            android:textColor="@color/mapo_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="장소 : 마포청소년센터"
            android:textColor="@color/mapo_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="영어권 국가에서 총 5년간 거주한 17세 학생입니다. 영어관련된 도움이 필요한  ·····"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:gravity="end"
        android:text="@string/details_btn"
        android:textColor="@color/mapo_gray"
        android:textSize="10sp" />

</androidx.cardview.widget.CardView>