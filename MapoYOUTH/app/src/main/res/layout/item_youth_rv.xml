<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_12dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_12dp"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin_16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/list_img_width"
            android:layout_height="@dimen/list_img_height"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/poster" />

            <TextView
                android:id="@+id/tv_deem"
                style="@style/TagBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tag"
                android:backgroundTint="#FFFFFF"
                android:backgroundTintMode="add"
                android:fontFamily="@font/roboto_700"
                android:text="모집마감"
                android:textColor="#333333"
                android:visibility="gone" />

            <View
                android:id="@+id/view_deem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tag"
                style="@style/TagBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_tag"
                android:backgroundTint="@color/mapo_green"
                android:text="환경보존"
                android:textColor="@color/mapo_green" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="-1sp"
                android:maxLines="2"
                android:singleLine="false"
                android:text="2021 제로웨이스트 업사이클 디자인 공모전(~7/23)"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마포청소년센터"
                android:textColor="@color/mapo_gray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/AgeBox"
                    android:layout_width="22dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginEnd="@dimen/margin_4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mapo_olive"
                    android:text="초" />

                <TextView
                    android:id="@+id/textView61"
                    style="@style/AgeBox"
                    android:layout_width="22dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginEnd="@dimen/margin_4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mapo_sky"
                    android:text="중" />

                <TextView
                    android:id="@+id/textView62"
                    style="@style/AgeBox"
                    android:layout_width="22dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/mapo_navy"
                    android:text="고" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_people"
                style="@style/TagBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@color/mapo_blue"
                android:text="모집 인원: 00명"
                android:textColor="@color/mapo_blue" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/list_divider" />

</FrameLayout>