<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 검색 toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/notice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            style="@style/ActionBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="알림설정"
            android:fontFamily="@font/roboto_700"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />
    </androidx.appcompat.widget.Toolbar>


    <!-- 구분선 1 -->
    <View
        android:id="@+id/settingline1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C4C4C4"
        app:layout_constraintTop_toBottomOf="@+id/notice_toolbar" />

    <View
        android:id="@+id/settingline2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F6F6F6"
        app:layout_constraintTop_toBottomOf="@+id/settingline1" />

    <!-- 알림설정 On/Off Btn(Switch) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:textSize="24sp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto_400"
        app:layout_constraintTop_toBottomOf="@id/settingline2"/>

</androidx.constraintlayout.widget.ConstraintLayout>