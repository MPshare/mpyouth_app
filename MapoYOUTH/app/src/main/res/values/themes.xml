<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MapoYOUTH" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mapo_blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mapo_gray</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/action_bar_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonTheme" parent="TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>